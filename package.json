{
  "name": "yubaba",
  "private": true,
  "version": "0.2.0",
  "repository": "madou/yubaba",
  "author": "Michael Dougall",
  "license": "MIT",
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "clean": "lerna clean --yes && rm -rf packages/core/dist/ && rm -rf packages/react/dist/",
    "build": "lerna run build",
    "lint": "eslint .",
    "test": "npm run lint && npm run unit && npm run flow",
    "unit": "npm run core:unit && npm run react:unit",
    "flow": "flow && flow stop",
    "example": "webpack-dev-server --hot --inline --open --config ./examples/webpack.config.js",
    "core:dev": "lerna run start --scope *core",
    "core:tdd": "npm run core:unit -- -w",
    "core:unit": "NODE_ENV=test mocha \"./packages/core/src/**/*.spec.js\" --opts ./packages/core/test/mocha.opts",
    "react:dev": "EXAMPLE=dark-side lerna run start --scope react*",
    "react:tdd": "npm run react:unit -- -w",
    "react:unit": "NODE_ENV=test mocha \"./packages/react/src/**/*.spec.js\" --opts ./packages/react/test/mocha.opts",
    "codecov": "echo \"not implemented\"",
    "docs": "rm -rf ./docs && NODE_ENV=production node ./scripts/buildDocs.js",
    "docs-run": "cd docs && static-server",
    "publish": "npm run core:publish && npm run react:publish",
    "core:publish": "cd packages/core && npm publish",
    "react:publish": "cd packages/react && npm publish",
    "preversion": "npm test",
    "version": "version-changelog CHANGELOG.md && changelog-verify CHANGELOG.md && git add CHANGELOG.md && node ./scripts/deploy",
    "postversion": "git push && git push --tags"
  },
  "devDependencies": {
    "autoprefixer": "^7.1.2",
    "babel": "^6.5.2",
    "babel-core": "^6.25.0",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^7.1.1",
    "babel-plugin-istanbul": "^4.1.4",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.6.5",
    "babel-plugin-transform-runtime": "^6.6.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-react": "^6.24.1",
    "babel-runtime": "^6.25.0",
    "chai": "^4.1.1",
    "chai-as-promised": "^7.0.0",
    "changelog-verify": "^1.0.4",
    "css-loader": "^0.28.4",
    "eslint": "^3.1.1",
    "eslint-config-airbnb": "^15.1.0",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-flowtype": "^2.35.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^5.0.0",
    "eslint-plugin-mocha": "^4.11.0",
    "eslint-plugin-react": "^7.1.0",
    "file-loader": "^0.11.2",
    "flow-bin": "^0.52.0",
    "glob": "^7.1.2",
    "html-webpack-plugin": "^2.30.1",
    "inject-loader": "^2.0.1",
    "jsdom": "^11.1.0",
    "jsdom-global": "^3.0.2",
    "lerna": "^2.0.0",
    "lodash": "^4.17.4",
    "lolex": "^1.4.0",
    "mocha": "^3.5.0",
    "normalize.css": "^7.0.0",
    "open-browser-webpack-plugin": "^0.0.5",
    "postcss-loader": "^2.0.6",
    "promise": "^8.0.1",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "sinon": "^2.3.5",
    "sinon-chai": "^2.12.0",
    "style-loader": "^0.18.2",
    "subdirs": "^1.0.1",
    "version-changelog": "^2.1.0",
    "web-animations-js": "^2.3.1",
    "webpack": "^3.4.1",
    "webpack-dev-server": "^2.6.1",
    "webpack-merge": "^4.1.0"
  }
}
